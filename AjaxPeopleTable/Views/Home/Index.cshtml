<div class="row" style="margin-top:40px">
    <div class="col-lg-3">
        <input type="text" id="first-name" class="form-control" placeholder="First Name" />
    </div>
    <div class="col-lg-3">
        <input type="text" id="last-name" class="form-control" placeholder="Last Name" />
    </div>
    <div class="col-lg-3">
        <input type="text" id="age" class="form-control" placeholder="Age" />
    </div>
    <div class="col-lg-3">
        <button class="btn btn-success btn-block" id="add-btn">Add Person</button>
    </div>
    <div style="margin-top:40px" class="col-lg-12">
        <table id="ppl-table" class="table table-bordered table-hover table-striped" >
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Age</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

<div class="modal" tabindex="-1" role="dialog" id="edit-modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="edit-name">Edit </h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-offset-2 col-lg-3">
                        <label>First Name</label>
                        <input type="text" id="first-name-modal" class="form-control" />
                    </div>
                    <br />
                    <div class="col-lg-offset-2 col-lg-3">
                        <label>Last Name</label>
                        <input type="text" id="last-name-modal" class="form-control" />
                    </div>
                    <br />
                    <div class="col-lg-offset-2 col-lg-3">
                        <label>Age</label>
                        <input type="text" id="age-modal" class="form-control" />
                    </div>
                    <br />
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" id="save">Save changes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/PplTable.js"></script>
 }